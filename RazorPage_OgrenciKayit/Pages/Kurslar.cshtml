@page
@model RazorPage_OgrenciKayit.Pages.KurslarModel
@{
}
<div>
    <row>
        <a class="btn btn-success" asp-page="./KursEkleme">Kurs Ekle</a>
    </row>
    <row>
        <table class="table table-striped">
            <thread>
                <tr>
                    <th style="text-align:left" scope="col">Id</th>
                    <th style="text-align:center" scope="col">Kurs Adı</th>
                    <th style="text-align:center" scope="col">Kayıtlı Öğrenci Sayısı</th>
                    <th style="text-align:center" scope="col">Kurs Kontenjanı</th>
                </tr>
            </thread>
            <tbody>
                @if (Model.Ogrenciler != null)
                {
                    @foreach (var item in Model.Kurslar)
                    {
                            int a = 0;
                            @foreach (var krs in Model.Ogrenciler)
                            {
                                @if (item.KursId == krs.KursId)
                                {
                                    a++;
                                }
                            }

                        <tr>

                            <td style="text-align:left" scope="col">@item.KursId</td>
                            <td style="text-align:center" scope="col">@item.Kursadi</td>
                            <td style="text-align:center" scope="col">@a</td>
                            <td style="text-align:center" scope="col">15</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </row>
</div>